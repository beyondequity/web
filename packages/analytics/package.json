{
  "name": "@beyondequity/analytics",
  "version": "1.0.0",
  "description": "Unified analytics tracking for Beyond Equity ecosystem",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./providers": {
      "types": "./dist/providers.d.ts",
      "import": "./dist/providers.mjs",
      "require": "./dist/providers.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/providers.tsx --format cjs,esm --dts --external react --external react-dom",
    "dev": "tsup src/index.ts src/providers.tsx --format cjs,esm --dts --watch --external react --external react-dom",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "react-ga4": "^2.1.0"
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  }
}
